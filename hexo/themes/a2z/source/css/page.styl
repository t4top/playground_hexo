@import "nib"
@import "_variables"
@import "base"

body
  grid-template-columns: 4fr 1fr
  grid-template-rows: 2fr 4fr 80px
  grid-template-areas: 'header header' 'main sidebar' 'footer footer'
  @media mq_mobile
    grid-template-columns: auto
    grid-template-rows: 2fr auto auto 80px
    grid-template-areas: 'header' 'main' 'sidebar' 'footer'

.header
  display: block
  grid-template-columns: auto
  grid-template-rows: 85px auto
  background: url("/img/wip.jpg") center center / cover no-repeat

.title
  text-align: left
  line-height: 150px
  padding: 30px 20px
  h1
    font-family: font_default4
    font-size: 100pt
    color: color_page_title
    text-shadow: 3px 3px color_title_shadow

.navbar
  display: grid
  grid-template-columns: 1fr 2fr
  align-items: center
  justify-items: left
  padding-right: 30px
  background-color: alpha(color_navbar_bg, 0.9)
  border-bottom: 1px solid color_bg
  .logo
    padding-left: 30px
  .nav
    display: grid
    justify-items: right
    text-align: right
    width: 100%
  ul
    list-style-type: none
    text-transform: uppercase
    @media mq-mobile
      display: none
  ul li
    display: inline-block
    padding: 5px 10px
    font-size: 13px
  a
    text-decoration: none
    color: color_link
    font-weight: 800
    transition: all 0.2s
    padding: 7px 15px
    &:hover
      color: color_link_hover
      background-color: color_text
      border-radius: 5px
    &.active_link
      color: color_link_hover
      background-color: color_text
      border-radius: 5px
 .sidenav_open
    display: none
    font-size: 30px
    @media mq-mobile
      display: block

#sidenav
  z-index: 10
  display: none
  position: absolute
  top: 0
  right: 0
  min-width: 60%
  border-radius: 0 0 0 15px
  overflow-x: hidden
  transition: 0.5s
  background-color: color_shadow
  justify-items: center
  text-align: center
  a
    text-decoration: none
    display: block
    color: color_sidenav_link
    opacity: 0.6
    text-shadow: 0 1px color_shadow
    transition: opacity 0.2s
    padding: 10px
    &:hover
      opacity: 1
      background-color: color_sidenav_hover
  .sidenav_close
    font-size: 40px
    text-align: right
    padding-right: 40px
    &:hover
      background-color: transparent

.main
  line-height: 30px
  padding: 30px 45px
  & > p:first-letter  // Apply styles to p:first-of-type, which may or may not be :first-child
    font-size: 200%
  & > p ~ p:first-letter  // Undo the above styles for every subsequent p
    font-size: 20px

.article_heading
  word-break: break-all

.article_header, .article_footer, .article_meta
  display: block
  font-size: 16px
  line-height: 16px
  margin: 20px 0

.article_share
  strong
    display: inline-block
    @media mq_mobile
      display: block
  a
    display: inline-block
    font-size: 30px
    padding-left: 10px
  .article_share_facebook
    color: #3A559F
  .article_share_twitter
    color: #1BB2E9
  .article_share_pinterest
    color: #CB2027

.article_meta, .excerpt_meta
  font-size: 12px
  line-height: 16px
  .meta_author, .meta_date, .meta_comment
    display: block

.excerpt_more
  display: block

.sidebar
  padding: 20px

.footer a
  color: color_home_link
  &:hover, &:focus
    color: color_home_link_hover
    text-decoration: underline
